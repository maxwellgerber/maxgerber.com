extends ./layout.jade

block style
  link(rel='stylesheet', href='css/contact.css')

block nav
  li.hightlight2
    a(href='index.html') Home
  li.highlight2
    a(href='resume.html') Resume
  li.highlight2
    a(href='project.html') EECS Projects
  li.highlight2
    a(href='project.html') ME Projects
  li.active
    a(href='#') Contact

block content
  .picture
    .container
      // Contacts
      #contacts
        .row
          // Alignment
          .col-sm-offset-3.col-sm-6
            // Form itself
            form#contactForm.well(name='sentMessage', novalidate='')
              legend Contact me
              .control-group
                .controls
                  input#name.form-control(type='text', placeholder='Full Name', required='', data-validation-required-message='Please enter your name')
                  p.help-block
              .control-group
                .controls
                  input#email.form-control(type='email', placeholder='Email', required='', data-validation-required-message='Please enter your email')
              br
              .control-group
                .controls
                  textarea#message.form-control(rows='10', cols='100', placeholder='Message', required='', data-validation-required-message='Please enter your message', minlength='5', data-validation-minlength-message='Min 5 characters', maxlength='999', style='resize:none')
              #success  
              // For success/fail messages
              br
              button.btn.btn-secondary.pull-right(onclick='myFunction()') Send
              br
              br